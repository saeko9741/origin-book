<div class="row">
	<div class="col-md-12">
		<h2>保存した単語一覧</h2>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>単語</th>
					<th>語源</th>
					<th>画像</th>
					<th>意味</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @wordbooks.each do |wordbook| %>
					<tr>
						<td><%= wordbook.word %></td>
						<td><%= wordbook.origin %></td>
						<% if wordbook.my_image.present? %>
							<td><%= attachment_image_tag wordbook, :my_image %></td>
						<% else %>
						  <td><%= image_tag wordbook.image.word_image %></td>
						<% end %>
						<td><%= wordbook.meaning %></td>
						<td><%=link_to "編集する", edit_wordbook_path(wordbook.id), class: "btn btn-primary" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>