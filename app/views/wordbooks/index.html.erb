<div class="row">
	<div class="col-md-12">
		<h2>保存した単語一覧</h2>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>単語</th>
					<th>語源</th>
					<th>画像</th>
					<th>意味</th>
					<th>編集・削除</th>
				</tr>
			</thead>
			<tbody>
				<% @wordbooks.each do |wordbook| %>
					<tr>
						<td class="col-md-1"><%= wordbook.word %></td>
						<td class="col-md-5"><%= wordbook.origin %></td>
						<% if wordbook.my_image.present? %>
							<td class="col-md-1"><%= attachment_image_tag wordbook, :my_image, :fill, 150, 100 %></td>
						<% else %>
						  <td class="col-md-1"><%= image_tag wordbook.image.word_image %></td>
						<% end %>
						<td class="col-md-2"><%= wordbook.meaning %></td>
						<td class="col-md-1"><%=link_to "編集する", edit_wordbook_path(wordbook.id), class: "btn btn-primary" %><br><br>
							<%=link_to "削除する", wordbook_path(wordbook.id), class: "btn btn-danger", method: :delete,"data-confirm" => "本当に削除しますか?" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>